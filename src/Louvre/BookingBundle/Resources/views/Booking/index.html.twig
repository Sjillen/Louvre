{% extends "LouvreBookingBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Réservation{% endblock %}
	
{% block body %}

	
	
		<h1>Bienvenue sur la billetterie en ligne du musée du Louvre</h1>

		<p>Premier formulaire a placer ici avec: </p>
			<ul>
				<li>Date de visite</li>
				<li>Type de billet</li>
				<li>nombre de billets</li>
				<li>Coordonnees de contact (nom, prenom, email)</li>
			</ul>

		<h3>Formulaire Reservation</h3>
	<div class="row">
		<div class="well col-sm-offset-4 col-sm-4">
			

			{{ form_start(form, {'attr' : {'class': 'form-horizontal' }}) }}
			{{ form_errors(form) }}

			
			<div class="form-group">
				{{ form_label(form.date, "Votre date de réservation", { 'label_attr': {'class': 'col-sm-4 control-label'}}) }}
				<div class="col-sm-4">
				{{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.type, "Votre type de réservation", { 'label_attr': {'class': 'col-sm-4 radio-inline control-label'}}) }}
				<div class="col-sm-4">
				{{ form_widget(form.type) }}
				</div>
			</div>

			<div class ="form-group">
				{{ form_label(form.email, "Votre email", { 'label_attr': {'class': "col-sm-4 control-label"}}) }}
				{{ form_errors(form.email) }}
				<div class="col-sm-4">
					{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class ="form-group">
				{{ form_label(form.firstName, "Votre prénom", { 'label_attr': {'class': "col-sm-4 control-label"}}) }}
				{{ form_errors(form.firstName) }}
				<div class="col-sm-4">
					{{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class ="form-group">
				{{ form_label(form.lastName, "Votre nom de famille", { 'label_attr': {'class': "col-sm-4 control-label"}}) }}
				{{ form_errors(form.lastName) }}
				<div class="col-sm-4">
					{{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class ="form-group">
				{{ form_label(form.nbTickets, "Nombre de billets", { 'label_attr': {'class': "col-sm-4 control-label"}}) }}
				{{ form_errors(form.nbTickets) }}
				<div class="col-sm-2">
					{{ form_widget(form.nbTickets, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-4 col-sm-offset-4">
					{{ form_widget(form.save, {'attr': {'class' : 'btn btn-primary'}}) }}
				</div>
			</div>
		  	
			{{ form_end(form) }}	
			  
		</div>
	</div>

{% endblock %}

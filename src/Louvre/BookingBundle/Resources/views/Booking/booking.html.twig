{% extends "LouvreBookingBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Réservation{% endblock %}

{% block body %}
		
	<div class="col-xs-12 col-sm-offset-4 col-sm-4">
		<div class="progress">
		  <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%">
		    <span class="sr-only">25% Complete</span>
		   </div>
		</div>
	</div>
	<div class="well col-sm-offset-3 col-sm-6 col-xs-offset-1 col-xs-10">
		<div id="bookingContainer" class="row">
			<div class="col-xs-10 col-xs-offset-1">
				<div class="row">
					<div class="col-sm-8 col-sm-offset-2">
						<h3>Votre Réservation</h3>
					</div>
					{{ form_start(form, {'attr' : {'class': 'form-horizontal' }}) }}
					{{ form_errors(form) }}

					
					<div class="form-group">
						{{ form_label(form.date, "Votre date de réservation", { 'label_attr': {'class': 'col-sm-6 control-label'}}) }}
						<div class="col-sm-6">
						{{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.type, "Votre type de réservation", { 'label_attr': {'class': 'col-sm-6 radio-inline control-label'}}) }}
						<div class="col-sm-6">
						{{ form_widget(form.type, {'attr' : { 'data-toggle': 'tooltip','data-placement': 'right', 'title': 'Demi-journée: Entrée à partir de 14h !'}}) }}
						</div>
					</div>

					<div class ="form-group">
						{{ form_label(form.email, "Votre email", { 'label_attr': {'class': "col-sm-6 control-label"}}) }}
						{{ form_errors(form.email) }}
						<div class="col-sm-6">
							{{ form_widget(form.email, {'attr': {'class': 'form-control', 'data-toggle': 'tooltip','data-placement': 'right', 'title': 'Adresse de contact à laquelle seront envoyés les tickets'}}) }}
						</div>
					</div>

					<div class ="form-group">
						{{ form_label(form.firstName, "Votre prénom", { 'label_attr': {'class': "col-sm-6 control-label"}}) }}
						{{ form_errors(form.firstName) }}
						<div class="col-sm-6">
							{{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>

					<div class ="form-group">
						{{ form_label(form.lastName, "Votre nom de famille", { 'label_attr': {'class': "col-sm-6 control-label"}}) }}
						{{ form_errors(form.lastName) }}
						<div class="col-sm-6">
							{{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>

					<div class ="form-group">
						{{ form_label(form.nbTickets, "Nombre de billets", { 'label_attr': {'class': "col-sm-6 control-label"}}) }}
						{{ form_errors(form.nbTickets) }}
						<div class="col-sm-4">
							{{ form_widget(form.nbTickets, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>

					<div class="form-group">
						<div class="col-sm-8 col-sm-offset-2">
							{{ form_widget(form.save, { 'label' : 'Suivant', 'attr': {'class' : 'btn btn-primary btn-lg btn-block'}}) }}
						</div>
					</div>
			  	</div>
				{{ form_end(form) }}			  
			</div>
		</div>
	</div>
{% endblock %}



